<Window x:Class="SpriteAnimator.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShellView" Height="500" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Button x:Name="SelectOpenSet" Content="Open Set" Width="150" Margin="0 10" />
                <Button x:Name="SelectMain" Content="Main" Width="150" Margin="0 10" />
                <Button x:Name="SelectImageBlobs" Content="Image Blobs" Width="150" Margin="0 10" />
				<Button x:Name="SelectConcat" Content="Concat Atlases" Width="150" Margin="0 10" />
            </StackPanel>
        </Border>

        <ContentControl x:Name="ActiveItem" Grid.Column="1" />
    </Grid>
</Window>
